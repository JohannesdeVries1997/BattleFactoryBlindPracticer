@inject HttpClient _client
@using BattleFactoryBlindPracticer.Model

<MoveListComponent IsGuessable=true Moves=@chosenSet.Moves></MoveListComponent>



@code {
    public List<Pokemon> pokemons = new();

    public List<BattleFactorySet> sets = new();

    public BattleFactorySet chosenSet = new BattleFactorySet();

    protected override async Task OnInitializedAsync()
    {
        pokemons = await DataGetter.GetPokemonData(_client);
        sets = await DataGetter.GetBattleFactoryData(_client);
        chosenSet = sets[0];
    }
}
